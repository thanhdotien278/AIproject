<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title !== 'undefined' ? title : 'Quản Trị - Đăng Ký Hội Nghị' %></title>
  
  <!-- Favicon -->
  <link rel="icon" href="/images/HVQYicon.png">
  
  <!-- CSS -->
  <link rel="stylesheet" href="/css/styles.css">
  
  <!-- Font - Inter -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  
  <!-- Add any additional styles if needed -->
  <%- typeof style !== 'undefined' ? style : '' %>
</head>
<body class="bg-gray-100">
  <div class="flex min-h-screen">
    <!-- Sidebar (hidden on mobile) -->
    <aside class="hidden md:flex md:flex-col md:w-64 bg-gray-800 text-white">
      <div class="p-6">
        <h1 class="text-2xl font-bold">Quản Trị</h1>
      </div>
      <nav class="flex-1 px-4 py-4 space-y-2">
        <a href="/admin/dashboard" class="block px-4 py-2 rounded-md hover:bg-gray-700 <%= typeof currentPath !== 'undefined' && currentPath === '/admin/dashboard' ? 'bg-gray-700' : '' %>">
          <div class="flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            Bảng Điều Khiển
          </div>
        </a>
        <a href="/admin/users" class="block px-4 py-2 rounded-md hover:bg-gray-700 <%= typeof currentPath !== 'undefined' && currentPath === '/admin/users' ? 'bg-gray-700' : '' %>">
          <div class="flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
            Người Dùng
          </div>
        </a>
        <a href="/admin/speakers" class="block px-4 py-2 rounded-md hover:bg-gray-700 <%= typeof currentPath !== 'undefined' && currentPath === '/admin/speakers' ? 'bg-gray-700' : '' %>">
          <div class="flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.653-.08-.99-.225-1.285A5 5 0 1012 15v5M12 15V4m0 11H7m5 0h5"/>
            </svg>
            Diễn Giả
          </div>
        </a>
        <a href="/admin/settings" class="block px-4 py-2 rounded-md hover:bg-gray-700 <%= typeof currentPath !== 'undefined' && currentPath === '/admin/settings' ? 'bg-gray-700' : '' %>">
          <div class="flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            Cài Đặt
          </div>
        </a>
        <a href="/admin/logout" class="block px-4 py-2 rounded-md hover:bg-gray-700">
          <div class="flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
            </svg>
            Đăng Xuất
          </div>
        </a>
      </nav>
    </aside>

    <!-- Main content -->
    <div class="flex-1 flex flex-col">
      <!-- Header -->
      <header class="bg-white shadow sticky top-0 z-10">
        <div class="container mx-auto px-4 py-4 flex justify-between items-center">
          <div class="flex items-center">
            <!-- Mobile menu toggle -->
            <button id="mobile-menu-toggle" class="mr-4 text-gray-700 md:hidden">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>
            
            <a href="/admin/dashboard" class="text-2xl font-bold text-blue-600">Hội Nghị</a>
          </div>
          
          <!-- Navigation - Desktop -->
          <nav class="hidden md:block">
            <ul class="flex space-x-6">
              <li><a href="/admin/users" class="text-gray-700 hover:text-blue-600">Người Dùng</a></li>
              <li><a href="/admin/speakers" class="text-gray-700 hover:text-blue-600">Diễn Giả</a></li>
              <li><a href="/admin/settings" class="text-gray-700 hover:text-blue-600">Cài Đặt</a></li>
              <li><a href="/admin/logout" class="text-gray-700 hover:text-blue-600">Đăng Xuất</a></li>
            </ul>
          </nav>
          
          <!-- Mobile menu button -->
          <button type="button" class="md:hidden text-gray-700 hover:text-blue-600 focus:outline-none" id="mobile-menu-button-top">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
        
        <!-- Top Mobile menu (hidden by default) -->
        <div class="md:hidden hidden" id="mobile-menu-top">
          <div class="container mx-auto px-4 py-3 space-y-3">
            <a href="/admin/users" class="block px-3 py-2 text-gray-700 hover:text-blue-600 hover:bg-gray-100 rounded-md">Người Dùng</a>
            <a href="/admin/speakers" class="block px-3 py-2 text-gray-700 hover:text-blue-600 hover:bg-gray-100 rounded-md">Diễn Giả</a>
            <a href="/admin/settings" class="block px-3 py-2 text-gray-700 hover:text-blue-600 hover:bg-gray-100 rounded-md">Cài Đặt</a>
            <a href="/admin/logout" class="block px-3 py-2 text-gray-700 hover:text-blue-600 hover:bg-gray-100 rounded-md">Đăng Xuất</a>
          </div>
        </div>
        
        <!-- Mobile menu (hidden by default) for sidebar content -->
        <div id="mobile-menu" class="hidden px-4 py-2 bg-gray-100 md:hidden">
          <a href="/admin/dashboard" class="block py-2 px-4 hover:bg-gray-200 rounded-md">Bảng Điều Khiển</a>
          <a href="/admin/users" class="block py-2 px-4 hover:bg-gray-200 rounded-md">Người Dùng</a>
          <a href="/admin/speakers" class="block py-2 px-4 hover:bg-gray-200 rounded-md">Diễn Giả</a>
          <a href="/admin/settings" class="block py-2 px-4 hover:bg-gray-200 rounded-md">Cài Đặt</a>
          <a href="/admin/logout" class="block py-2 px-4 hover:bg-gray-200 rounded-md">Đăng Xuất</a>
        </div>
      </header>
      
      <!-- Main content container -->
      <main class="flex-1 p-6">
        <% if (typeof username !== 'undefined') { %>
          <div class="mb-6 text-right">
            <span class="text-gray-600">Đăng nhập với: <strong><%= username %></strong></span>
          </div>
        <% } %>
        
        <%- body %>
      </main>
      
      <!-- Footer -->
      <footer class="bg-white py-4 px-6 border-t">
        <p class="text-center text-gray-600 text-sm">
          &copy; <%= new Date().getFullYear() %> Quản Trị Hội Nghị VMMU
        </p>
      </footer>
    </div>
  </div>

  <!-- JavaScript -->
  <script>
    // Mobile menu toggle for sidebar
    document.getElementById('mobile-menu-toggle')?.addEventListener('click', function() {
      const mobileMenu = document.getElementById('mobile-menu');
      mobileMenu.classList.toggle('hidden');
    });
    
    // Mobile menu toggle for top navigation
    document.getElementById('mobile-menu-button-top')?.addEventListener('click', function() {
      const mobileMenuTop = document.getElementById('mobile-menu-top');
      mobileMenuTop.classList.toggle('hidden');
    });
  </script>
  
  <!-- Add any additional scripts if needed -->
  <%- typeof script !== 'undefined' ? script : '' %>
</body>
</html> 