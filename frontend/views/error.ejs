<%- contentFor('body') %>

<!-- Error Section -->
<section class="py-20 bg-red-50">
  <div class="container mx-auto px-4 text-center">
    <div class="max-w-lg mx-auto">
      <!-- Error Icon -->
      <div class="mb-8">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-32 w-32 mx-auto text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
      </div>
      
      <!-- Error Message -->
      <h1 class="text-3xl font-bold text-gray-800 mb-6">Something Went Wrong</h1>
      <p class="text-gray-600 text-lg mb-8"><%= message || 'An unexpected error has occurred. Our team has been notified.' %></p>
      
      <!-- Actions -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/" class="btn bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-medium">
          Return to Homepage
        </a>
        <button onclick="window.location.reload()" class="btn bg-gray-600 hover:bg-gray-700 text-white px-6 py-3 rounded-lg font-medium">
          Try Again
        </button>
      </div>
    </div>
  </div>
</section>

<!-- Support Information -->
<section class="py-10">
  <div class="container mx-auto px-4 text-center">
    <h3 class="text-xl font-semibold mb-4">Need Assistance?</h3>
    <p class="text-gray-600 mb-2">If the problem persists, please contact our support team:</p>
    <p class="text-blue-600">conference@example.com</p>
  </div>
</section> 