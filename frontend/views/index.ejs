<!-- QR Code Script -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Get the QR code image elements
    const qrCodeElement = document.getElementById('register-qr-code');
    const qrCodeMobileElement = document.getElementById('register-qr-code-mobile');
    
    // Fetch QR code from API
    let qrCodeUrl = '/api/qrcode';
    
    <% if (typeof conference !== 'undefined' && conference && conference.code) { %>
    // Add conference code if available
    qrCodeUrl += '?code=' + '<%= conference.code %>';
    <% } %>
    
    // Fetch the QR code from our API
    fetch(qrCodeUrl)
      .then(response => response.json())
      .then(data => {
        // Set the image source to the data URL for both QR codes
        if (qrCodeElement) {
          qrCodeElement.src = data.qrCodeDataUrl;
        }
        if (qrCodeMobileElement) {
          qrCodeMobileElement.src = data.qrCodeDataUrl;
        }
      })
      .catch(error => {
        console.error('Error fetching QR code:', error);
      });
      
    // Generate random speaker images
    function getRandomSpeakerImages() {
      // Set of possible profile images
      const maleProfiles = [11, 12, 15, 22, 32, 36, 44, 67, 75, 85];
      const femaleProfiles = [10, 21, 33, 44, 45, 46, 55, 65, 79, 90];
      
      // Shuffle the arrays to get random order
      const shuffledMale = [...maleProfiles].sort(() => 0.5 - Math.random());
      const shuffledFemale = [...femaleProfiles].sort(() => 0.5 - Math.random());
      
      // Get speaker images
      const speakerImages = document.querySelectorAll('.speaker-image');
      
      // Set random images for each speaker
      speakerImages.forEach((img, index) => {
        // Alternate between male and female images
        const profileId = index % 2 === 0 ? shuffledMale[index] : shuffledFemale[index];
        const gender = index % 2 === 0 ? 'men' : 'women';
        
        // Set the image source
        img.src = `https://randomuser.me/api/portraits/${gender}/${profileId}.jpg`;
      });
    }
    
    // Call the function to generate random speaker images
    getRandomSpeakerImages();
  });
</script> 