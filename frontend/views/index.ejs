        <p class="text-gray-700"><%= formattedDates || 'To be announced' %></p>
        <p class="text-gray-700"><%= conference ? conference.time : '9:00 AM - 5:00 PM' %></p>
      </div>
      
      <!-- Location -->
      <div class="bg-blue-50 p-6 rounded-lg text-center">
