<%- contentFor('body') %>

<!-- Registration Banner Section -->
<section class="bg-gradient-to-r from-blue-600 to-blue-800 text-white py-12">
  <div class="container mx-auto px-4 text-center">
    <h1 class="text-3xl md:text-4xl font-bold mb-4"><%= conference ? conference.name : 'Hội Nghị' %></h1>
    <div class="flex flex-wrap justify-center gap-4 mt-6">
      <div class="bg-white bg-opacity-10 px-4 py-2 rounded-lg">
        <span class="font-semibold">Ngày:</span> <%= formattedDates || 'Sẽ được thông báo sau' %>
      </div>
      <div class="bg-white bg-opacity-10 px-4 py-2 rounded-lg">
        <span class="font-semibold">Địa điểm:</span> <%= locationName || 'Sẽ được thông báo sau' %>
      </div>
      <% if (conference && conference.contactName) { %>
      <div class="bg-white bg-opacity-10 px-4 py-2 rounded-lg">
        <span class="font-semibold">Liên hệ:</span> <%= conference.contactName %>
      </div>
      <% } %>
      <% if (conference && conference.contactPhone) { %>
      <div class="bg-white bg-opacity-10 px-4 py-2 rounded-lg">
        <span class="font-semibold">Điện thoại:</span> <%= conference.contactPhone %>
      </div>
      <% } %>
      <% if (conference && conference.contactEmail) { %>
      <div class="bg-white bg-opacity-10 px-4 py-2 rounded-lg">
        <span class="font-semibold">Email:</span> <%= conference.contactEmail %>
      </div>
      <% } %>
    </div>
  </div>
</section>

<!-- Registration Form Section -->
<section class="py-12">
  <div class="container mx-auto px-4">
    <div class="max-w-2xl mx-auto bg-white rounded-lg shadow-md p-6 md:p-8">
      <!-- Alert container for form validation errors -->
      <div id="alert-container" class="mb-6 hidden">
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
          <strong class="font-bold">Lỗi!</strong>
          <span id="alert-message" class="block sm:inline ml-1"></span>
        </div>
      </div>
      
      <!-- Registration Form -->
      <form id="registration-form" method="POST" action="/register" class="space-y-6">
        <input type="hidden" name="conferenceCode" value="<%= conference ? conference.code : 'CONF' %>">
        
        <!-- Name - always required -->
        <div>
          <label for="name" class="form-label">Họ và Tên <span class="text-red-500">*</span></label>
          <input type="text" id="name" name="name" class="form-input" required>
        </div>
        
        <!-- Email - always required -->
        <div>
          <label for="email" class="form-label">Địa chỉ Email <span class="text-red-500">*</span></label>
          <input type="email" id="email" name="email" class="form-input" required>
        </div>
        
        <!-- Phone - always required -->
        <div>
          <label for="phone" class="form-label">Số Điện Thoại <span class="text-red-500">*</span></label>
          <input type="tel" id="phone" name="phone" class="form-input" required>
        </div>
        
        <!-- Dynamic fields based on conference settings -->
        <% if (registrationFields.includes('address')) { %>
        <div>
          <label for="address" class="form-label">Địa chỉ</label>
          <input type="text" id="address" name="address" class="form-input">
        </div>
        <% } %>
        
        <% if (registrationFields.includes('age')) { %>
        <div>
          <label for="age" class="form-label">Tuổi</label>
          <input type="text" id="age" name="age" class="form-input">
        </div>
        <% } %>
        
        <% if (registrationFields.includes('business')) { %>
        <div>
          <label for="business" class="form-label">Lĩnh vực kinh doanh</label>
          <input type="text" id="business" name="business" class="form-input">
        </div>
        <% } %>
        
        <% if (registrationFields.includes('lunch')) { %>
        <div>
          <label for="lunch" class="form-label">Nhu cầu ăn trưa</label>
          <select id="lunch" name="lunch" class="form-input">
            <option value="">-- Lựa chọn --</option>
            <option value="Standard">Tiêu chuẩn</option>
            <option value="Vegetarian">Chay</option>
            <option value="Vegan">Thuần chay</option>
            <option value="None">Không cần ăn trưa</option>
          </select>
        </div>
        <% } %>
        
        <% if (registrationFields.includes('source')) { %>
        <div>
          <label for="source" class="form-label">Bạn biết về hội nghị này qua đâu?</label>
          <select id="source" name="source" class="form-input">
            <option value="">-- Lựa chọn --</option>
            <option value="Social Media">Mạng xã hội</option>
            <option value="Website">Website</option>
            <option value="Email">Email</option>
            <option value="Friend">Bạn bè/Đồng nghiệp</option>
            <option value="Other">Khác</option>
          </select>
        </div>
        <% } %>
        
        <% if (registrationFields.includes('nationality')) { %>
        <div>
          <label for="nationality" class="form-label">Quốc tịch</label>
          <input type="text" id="nationality" name="nationality" class="form-input">
        </div>
        <% } %>
        
        <% if (registrationFields.includes('organization')) { %>
        <div>
          <label for="organization" class="form-label">Tổ chức/Công ty</label>
          <input type="text" id="organization" name="organization" class="form-input">
        </div>
        <% } %>
        
        <!-- Questions - always available -->
        <div>
          <label for="questions" class="form-label">Câu hỏi hoặc Ý kiến</label>
          <textarea id="questions" name="questions" rows="4" class="form-input"></textarea>
        </div>
        
        <!-- Submit Button -->
        <div class="pt-4">
          <button type="submit" id="submit-btn" class="btn btn-primary w-full">Đăng Ký Ngay</button>
        </div>
      </form>
    </div>
    
    <!-- Additional Info -->
    <div class="max-w-2xl mx-auto mt-8 text-center text-gray-600">
      <p>Đã đăng ký? <a href="/" class="text-blue-600 hover:underline">Quay lại trang chủ</a></p>
      <% if (conference && conference.contactEmail) { %>
        <p class="mt-2">Để được hỗ trợ đăng ký, vui lòng liên hệ <a href="mailto:<%= conference.contactEmail %>" class="text-blue-600 hover:underline"><%= conference.contactEmail %></a></p>
      <% } else { %>
        <p class="mt-2">Để được hỗ trợ đăng ký, vui lòng liên hệ ban tổ chức hội nghị.</p>
      <% } %>
    </div>
  </div>
</section>

<%- contentFor('script') %>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('registration-form');
    const alertContainer = document.getElementById('alert-container');
    const alertMessage = document.getElementById('alert-message');
    const submitBtn = document.getElementById('submit-btn');
    
    form.addEventListener('submit', async function(e) {
      e.preventDefault();
      
      // Basic form validation
      const name = document.getElementById('name').value.trim();
      const email = document.getElementById('email').value.trim();
      const phone = document.getElementById('phone').value.trim();
      
      if (!name) {
        showAlert('Vui lòng nhập họ và tên của bạn.');
        return;
      }
      
      if (!email) {
        showAlert('Vui lòng nhập địa chỉ email của bạn.');
        return;
      }
      
      if (!validateEmail(email)) {
        showAlert('Vui lòng nhập địa chỉ email hợp lệ.');
        return;
      }
      
      if (!phone) {
        showAlert('Vui lòng nhập số điện thoại của bạn.');
        return;
      }
      
      // Disable button and show loading state
      submitBtn.disabled = true;
      submitBtn.innerHTML = 'Đang xử lý...';
      
      try {
        // Collect form data
        const formData = new FormData(form);
        const formDataObject = {};
        formData.forEach((value, key) => {
          formDataObject[key] = value;
        });
        
        // Submit form via AJAX
        const response = await fetch(form.action, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(formDataObject)
        });
        
        const data = await response.json();
        
        if (data.success) {
          // Redirect to thank you page
          window.location.href = data.redirectUrl || '/thankyou';
        } else {
          // Show error message
          showAlert(data.message || 'Đã xảy ra lỗi trong quá trình đăng ký. Vui lòng thử lại.');
          submitBtn.disabled = false;
          submitBtn.innerHTML = 'Đăng Ký Ngay';
        }
      } catch (error) {
        console.error('Registration error:', error);
        showAlert('Đã xảy ra lỗi trong quá trình đăng ký. Vui lòng thử lại.');
        submitBtn.disabled = false;
        submitBtn.innerHTML = 'Đăng Ký Ngay';
      }
    });
    
    // Helper function to validate email
    function validateEmail(email) {
      const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      return re.test(email);
    }
    
    // Helper function to show alert message
    function showAlert(message) {
      alertMessage.textContent = message;
      alertContainer.classList.remove('hidden');
      
      // Scroll to the top to make alert visible
      window.scrollTo({ top: form.offsetTop - 100, behavior: 'smooth' });
    }
  });
</script>

<style>
  .form-label {
    @apply block text-sm font-medium text-gray-700 mb-1;
  }
  
  .form-input {
    @apply w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500;
  }
  
  .btn {
    @apply inline-flex items-center justify-center px-4 py-2 border border-transparent text-base font-medium rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2;
  }
  
  .btn-primary {
    @apply text-white bg-blue-600 hover:bg-blue-700 focus:ring-blue-500;
  }
</style> 