<%- contentFor('body') %>

<!-- 404 Section -->
<section class="py-20 bg-blue-50">
  <div class="container mx-auto px-4 text-center">
    <div class="max-w-lg mx-auto">
      <!-- 404 Icon -->
      <div class="mb-8">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-32 w-32 mx-auto text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      
      <!-- 404 Message -->
      <h1 class="text-5xl font-bold text-gray-800 mb-4">404</h1>
      <h2 class="text-2xl font-bold text-gray-700 mb-6">Page Not Found</h2>
      <p class="text-gray-600 text-lg mb-8"><%= message || 'The page you are looking for does not exist or has been moved.' %></p>
      
      <!-- Return to Home Button -->
      <a href="/" class="btn bg-blue-600 hover:bg-blue-700 text-white px-8 py-3 rounded-lg font-medium">
        Return to Homepage
      </a>
    </div>
  </div>
</section> 