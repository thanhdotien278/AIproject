<!-- Add JavaScript for PDF generation -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const downloadBtn = document.getElementById('download-ticket');
    
    downloadBtn.addEventListener('click', function() {
      // Check if jsPDF is loaded
      if (typeof window.jspdf === 'undefined') {
        alert('PDF generation library not loaded. Please try again later.');
        return;
      }
      
      try {
        const { jsPDF } = window.jspdf;
        
        // Create a new PDF document
        const doc = new jsPDF();
        
        // Add content to the PDF
        doc.setFontSize(22);
        doc.setTextColor(0, 86, 179); // Blue color
        doc.text('My Conference 2024', 105, 20, { align: 'center' });
        
        doc.setFontSize(14);
        doc.setTextColor(0, 0, 0); // Black color
        
        // Get participant name from session if available
        const participantName = '<%= typeof participantName !== "undefined" ? participantName : "Valued Participant" %>';
        
        doc.text(`Registration Successful!`, 105, 35, { align: 'center' });
        doc.text(`Thank you, ${participantName}, for registering.`, 105, 50, { align: 'center' });
        
        // Add divider line
        doc.setDrawColor(200, 200, 200);
        doc.line(20, 60, 190, 60);
        
        // Event details
        doc.setFontSize(16);
        doc.text('Event Details', 105, 75, { align: 'center' });
        
        doc.setFontSize(12);
        doc.text('Date:', 40, 90);
        doc.text('June 15-16, 2024', 80, 90);
        
        doc.text('Location:', 40, 105);
        doc.text('Hanoi, Vietnam', 80, 105);
        
        // Add divider line
        doc.setDrawColor(200, 200, 200);
        doc.line(20, 120, 190, 120);
        
        // Additional info
        doc.setFontSize(11);
        doc.text('Please save this confirmation for your reference.', 105, 135, { align: 'center' });
        
        // Add QR code placeholder (usually would be generated)
        doc.setDrawColor(0, 0, 0);
        doc.setFillColor(240, 240, 240);
        doc.roundedRect(75, 150, 60, 60, 3, 3, 'FD');
        doc.setFontSize(8);
        doc.text('QR Code', 105, 180, { align: 'center' });
        
        // Footer
        doc.setFontSize(10);
        doc.text('We look forward to seeing you at My Conference 2024!', 105, 250, { align: 'center' });
        doc.text('For any questions, contact: conference@example.com', 105, 260, { align: 'center' });
        
        // Save the PDF with the participant's name
        doc.save(`conference_ticket_${participantName.replace(/\s+/g, '_')}.pdf`);
        
      } catch (error) {
        console.error('Error generating PDF:', error);
        alert('Error generating PDF. Please try again later.');
      }
    });
  });
</script> 